<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="18dp">

        <ImageView
            android:id="@+id/iv_notification_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/notification_gray_bg" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_notification_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray3"
            tools:text="팔로우 신청"
            android:textSize="10sp"/>

        <TextView
            android:id="@+id/tv_notification_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/gray2"
            tools:text="Park_Happy 님이 팔로우를 요청하였습니다."
            android:textSize="12sp"/>


        <LinearLayout
            android:id="@+id/opt_btn_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFEBD9"
                android:text="수락"
                android:textColor="@color/primary"
                android:textSize="12sp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/refuse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="거절"
                android:backgroundTint="@color/gray5"
                android:textColor="@color/gray2"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>